{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "config/**/*",
        "controllers/**/*",
        "library/**/*",
        "middleware/**/*",
        "models/**/*",
        "routes/**/*",
        "server.ts",
    ]
}